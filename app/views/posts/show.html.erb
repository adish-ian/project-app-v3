<div class="container">
  <p id="notice">
    <%= notice %>
  </p>
  <p>

    <strong>Title:</strong>
    <%= @post.title %>
    <p>posted by <%= link_to @post.user.name, user_path(@post.user) %></p>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>
  <h6><%= pluralize(@post.views, "view") %></h6>
  <%= link_to 'Edit this post' , edit_post_path(@post) %> |
    <%= link_to 'Back' , posts_path %>
      <%= button_to 'Destroy' , @posts, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>